<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_speed_cart"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="bottom"
    android:visibility="gone"
    tools:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_navigation_drawer"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_totalPriceCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:text="280.00 EGP"
            android:textSize="@dimen/large_text_size"
            android:fontFamily="@font/poppinsmedium"
            android:layout_weight="4"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_view_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="VIEW CART (08) >"
            android:layout_weight="6"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:drawableEnd="@drawable/ic_nav_cart"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>