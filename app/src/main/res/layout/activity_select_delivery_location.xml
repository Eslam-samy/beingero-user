<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.location.deliveryLocation.SelectDeliveryLocationActivity"
    android:background="@color/white">

    <View
        android:id="@+id/viewBgLogo"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:paddingTop="@dimen/low_padding"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/logo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_logo_app"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="@+id/viewBgLogo"
        app:layout_constraintBottom_toBottomOf="@+id/viewBgLogo"
        app:layout_constraintStart_toStartOf="@+id/viewBgLogo"
        app:layout_constraintEnd_toEndOf="@+id/viewBgLogo"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewBgLogo"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lab_deliverTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deliver_to" />

        <Button
            android:id="@+id/btn_select_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lab_deliverTo"
            style="@style/ButtonNormalStyle"
            android:text="new Damietta - 33 nasr street"
            android:layout_marginStart="0dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_location_black"
            android:paddingStart="@dimen/medium_padding"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn_set_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lab_deliverTo"
            style="@style/ButtonNormalStyle"
            android:text="@string/set_location"
            android:layout_marginStart="0dp"
            />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>