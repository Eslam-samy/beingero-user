<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.storeDetail.StoreDetailsActivity">

    <include
        layout="@layout/app_bar_white"/>

    <ImageView
        android:id="@+id/img_store"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        android:src="@drawable/ic_placeholder_store"
        android:layout_marginStart="@dimen/app_margin"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Store 1"
        app:layout_constraintTop_toTopOf="@+id/img_store"
        app:layout_constraintStart_toEndOf="@+id/img_store"
        android:layout_marginStart="@dimen/normal_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/large_text_size"
        android:fontFamily="@font/poppinsmedium"/>
    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="64 East College St. Baldwin, NY"
        android:textColor="#6D6D6D"
        app:layout_constraintStart_toStartOf="@+id/txt_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        android:layout_marginTop="@dimen/normal_margin"
        android:textSize="@dimen/normal_text_size"
        android:fontFamily="@font/poppinsregular"/>

    <TextView
        android:id="@+id/txt_lab_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_id"
        app:layout_constraintStart_toStartOf="@+id/img_store"
        app:layout_constraintTop_toBottomOf="@+id/img_store"
        android:layout_marginTop="@dimen/app_margin"
        android:textColor="#89898B"
        android:textSize="@dimen/low_xx_text_size"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginStart="18dp"/>

    <TextView
        android:id="@+id/txt_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large_text_size"
        android:fontFamily="@font/poppinssemibold"
        app:layout_constraintStart_toStartOf="@+id/txt_lab_order_id"
        app:layout_constraintEnd_toEndOf="@+id/txt_lab_order_id"
        app:layout_constraintTop_toBottomOf="@+id/txt_lab_order_id"
        android:text="#86038"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txt_lab_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_lab_order_id"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/txt_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/txt_lab_total"
        app:layout_constraintEnd_toEndOf="@+id/txt_lab_total"
        app:layout_constraintTop_toBottomOf="@+id/txt_lab_total"
        android:textSize="@dimen/large_text_size"
        android:fontFamily="@font/poppinssemibold"
        android:text="150.55 EGP"
        android:textColor="@color/black"/>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_order_id"
        android:layout_marginTop="@dimen/app_margin"
        android:background="@color/color_line_box_language"/>

    <TextView
        android:id="@+id/txt_lab_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="@id/img_store"
        android:text="@string/products"
        android:layout_marginTop="@dimen/app_margin"
        android:fontFamily="@font/poppinsmedium"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_lab_products"/>



</androidx.constraintlayout.widget.ConstraintLayout>