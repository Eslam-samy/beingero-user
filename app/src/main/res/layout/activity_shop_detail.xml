<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.shopDetail.ShopDetailActivity"
    android:background="@color/white">

    <include
        layout="@layout/layout_toolbar_white"/>

    <include
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/componant_brand_header"
        app:layout_constraintTop_toBottomOf="@+id/bar"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_delivery_status"
        app:layout_constraintTop_toBottomOf="@+id/header_layout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        android:translationY="-20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_delivery_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/cart_cancel"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt_lab_delivery_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery_status"
            android:layout_marginStart="@dimen/app_margin"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <View
            android:id="@+id/time_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"
            android:layout_marginEnd="@dimen/app_margin"
            android:layout_marginStart="@dimen/app_margin"
            app:layout_constraintTop_toBottomOf="@+id/txt_lab_delivery_status"
            android:layout_marginTop="@dimen/app_margin"/>

        <ImageView
            android:id="@+id/img_timeline_status_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_timeline_check_blue"
            app:layout_constraintEnd_toStartOf="@+id/time_line"
            app:layout_constraintTop_toTopOf="@+id/time_line"
            app:layout_constraintBottom_toBottomOf="@+id/time_line"/>

        <ImageView
            android:id="@+id/img_timeline_status_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_timeline_empty"
            app:layout_constraintStart_toEndOf="@+id/time_line"
            app:layout_constraintTop_toTopOf="@+id/time_line"
            app:layout_constraintBottom_toBottomOf="@+id/time_line"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_timeline_check_blue"
            app:layout_constraintStart_toStartOf="@+id/time_line"
            app:layout_constraintEnd_toEndOf="@+id/time_line"
            app:layout_constraintTop_toTopOf="@+id/time_line"
            app:layout_constraintBottom_toBottomOf="@+id/time_line"/>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/img_timeline_status_start"
            app:layout_constraintTop_toBottomOf="@+id/time_line"
            android:layout_marginTop="@dimen/medium_margin"
            android:textColor="@color/colorOuterSpace"
            android:textSize="@dimen/medium_text_size"
            android:text="@string/order_in_the_way"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/img_timeline_status_last"
            app:layout_constraintTop_toBottomOf="@+id/time_line"
            android:layout_marginTop="@dimen/medium_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size"
            android:text="20 Oct 2018, 13:08"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/cart_cancel"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_space_button_cancel"
            android:layout_margin="@dimen/app_low_margin"
            android:text="@string/cancel_order"
            android:textColor="@color/rejected"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>