<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.storesDetail.StoreDetailActivity"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarLayoutTheme"
        android:background="@color/white">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_image_brands"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/image_store"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder_store"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_name_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/txt_status"
                app:layout_constraintStart_toEndOf="@+id/card_image_brands"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Nike Official"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_name_store"
                app:layout_constraintTop_toBottomOf="@+id/txt_name_store"
                android:text="Verified" />

            <Button
                android:id="@+id/btn_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="@string/follow"
                android:background="@drawable/shadow_button_follow"
                android:layout_marginEnd="15sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorHeight="5dp"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabMode="scrollable"
            app:tabContentStart="0dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_speed_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/medium_margin"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/app_low_padding"
            android:layout_marginEnd="@dimen/app_low_padding"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/txt_lab_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_speed_cart"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/medium_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginStart="@dimen/app_low_margin"
                    android:layout_margin="@dimen/large_margin"
                    />

                <TextView
                    android:id="@+id/txt_totalPriceCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="280.00 EGP"
                    app:layout_constraintTop_toTopOf="@+id/txt_lab_price"
                    app:layout_constraintStart_toEndOf="@+id/txt_lab_price"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_lab_price"
                    android:layout_marginStart="@dimen/low_margin"
                    android:textSize="@dimen/large_text_size"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"/>

                <Button
                    android:id="@+id/btn_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@drawable/round_main_button"
                    android:text="@string/cart"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/txt_countOfCart"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:text="5"
                    android:background="@drawable/round_small_main_button"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="@dimen/medium_text_size"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/btn_cart"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/medium_margin" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>




    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>