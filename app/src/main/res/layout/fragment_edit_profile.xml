<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.Setting.editProfile.EditProfileFragment">


    <TextView
        android:id="@+id/txt_lab_setting"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/edit_profile"
        style="@style/TextHeaderSetting"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_lab_setting"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginBottom="@dimen/medium_margin"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_email"
                style="@style/TextInputLayoutStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:translationY="0dp"
                >

                <EditText
                    style="@style/EditTextStyle"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Hazem@yahoo.com"

                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_firstName"
                style="@style/TextInputLayoutStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationY="0dp"
                app:layout_constraintTop_toBottomOf="@+id/input_email"
                >

                <EditText
                    style="@style/EditTextStyle"
                    android:hint="@string/firstName"
                    android:inputType="text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Hazem"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_lastName"
                style="@style/TextInputLayoutStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationY="0dp"
                app:layout_constraintTop_toBottomOf="@+id/input_firstName"
                >

                <EditText
                    style="@style/EditTextStyle"
                    android:hint="@string/lastName"
                    android:inputType="text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Elnahas"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_birthDate"
                style="@style/TextInputLayoutStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationY="0dp"
                app:layout_constraintTop_toBottomOf="@+id/input_lastName"
                >

                <EditText
                    style="@style/EditTextStyle"
                    android:hint="@string/date_of_birth_optional"
                    android:inputType="date"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/select_date"
                    android:enabled="false"
                    android:drawableEnd="@drawable/ic_calendar"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <TextView
                android:id="@+id/txt_hint_radio_gender"
                android:text="@string/gender_optional"
                app:layout_constraintStart_toStartOf="@+id/input_birthDate"
                app:layout_constraintTop_toBottomOf="@+id/input_birthDate"
                style="@style/HintTextStyle"
                />

            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/txt_hint_radio_gender"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginTop="@dimen/low_margin"
                >
                <RadioButton
                    android:id="@+id/radioMail"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mail"
                    android:paddingStart="4dp"
                    style="@style/MyRadioButtonStyle"
                    android:fontFamily="@font/poppinsmedium"
                    />

                <RadioButton
                    android:id="@+id/radioFemail"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/femail"
                    android:paddingStart="4dp"
                    style="@style/MyRadioButtonStyle"
                    android:fontFamily="@font/poppinsmedium"

                    />
            </RadioGroup>

            <View
                android:id="@+id/view_center"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorIcons"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupGender"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginEnd="@dimen/app_margin"/>

            <TextView
                android:id="@+id/txt_lab_receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/receive_updates_of_offers_npromotions_and_discount"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/view_center"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginEnd="@dimen/app_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:fontFamily="@font/poppinssemibold"
                />

            <TextView
                android:id="@+id/txt_lab_sms_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sms_notification"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_lab_receive"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:fontFamily="@font/poppinsregular"/>

            <Switch
                android:id="@+id/switch_sms_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/app_margin"
                app:layout_constraintTop_toTopOf="@+id/txt_lab_sms_notification"
                app:layout_constraintBottom_toBottomOf="@+id/txt_lab_sms_notification"
                android:track="@drawable/selector_switch_track"
                android:thumb="@drawable/selector_switch_thumb"/>


            <TextView
                android:id="@+id/txt_lab_newsletter_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/newsletter_subscription"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_lab_sms_notification"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:fontFamily="@font/poppinsregular"/>

            <Switch
                android:id="@+id/switch_newsletter_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/app_margin"
                app:layout_constraintTop_toTopOf="@+id/txt_lab_newsletter_subscription"
                app:layout_constraintBottom_toBottomOf="@+id/txt_lab_newsletter_subscription"
                android:track="@drawable/selector_switch_track"
                android:thumb="@drawable/selector_switch_thumb"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonNormalStyle"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/app_margin"
        />



</androidx.constraintlayout.widget.ConstraintLayout>