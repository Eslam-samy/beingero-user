<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Main.otp.VerifyPhoneNumberActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/app_margin"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="@dimen/app_margin"/>

    <TextView
        android:id="@+id/txt_lab_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/logo"
        android:text="@string/verify_your_phone_number"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/large_margin"/>

    <TextView
        android:id="@+id/txt_lab_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_lab_verify"
        app:layout_constraintStart_toStartOf="@+id/logo"
        android:text="@string/enter_the_4_digit_pin_that_we_sent_to"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/large_margin"/>


    <com.chaos.view.PinView
        android:id="@+id/pinView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="18sp"
        app:itemCount="6"
        app:itemHeight="48dp"
        app:itemRadius="10dp"
        app:lineColor="#4C69FF"
        app:cursorColor="#4C69FF"
        app:viewType="rectangle"
        app:layout_constraintTop_toBottomOf="@+id/txt_lab_message"
        app:layout_constraintStart_toStartOf="@+id/logo"
        android:layout_marginTop="@dimen/large_margin"
        />

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonNormalStyle"
        android:layout_marginBottom="@dimen/app_margin"
        android:text="@string/verify"
        app:layout_constraintBottom_toTopOf="@+id/btn_resend"/>

    <Button
        android:id="@+id/btn_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonNormalStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/app_margin"
        android:text="@string/resend"
        android:visibility="invisible"/>


    <com.uzairiqbal.circulartimerview.CircularTimerView
        android:id="@+id/countDown"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:progressColor="@color/colorAccent"
        app:backgroundColor="@color/colorPrimary"
        app:progressBackgroundColor="#eee"
        app:backgroundWidth="1"
        app:isClockwise="true"
        app:textSize="12sp"
        app:prefix=""
        app:suffix=" sec"
        app:progressText="5"
        app:maxValue="100"
        app:startingPoint="bottom"
        app:progressTextColor="#eee"
        app:layout_constraintStart_toStartOf="@+id/btn_resend"
        app:layout_constraintEnd_toEndOf="@+id/btn_resend"
        app:layout_constraintTop_toTopOf="@+id/btn_resend"
        app:layout_constraintBottom_toBottomOf="@+id/btn_resend" />




</androidx.constraintlayout.widget.ConstraintLayout>