<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_card"
    android:layout_marginBottom="@dimen/medium_margin">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_image_product"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/large_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/image_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img5"
                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txt_name_product"
            style="@style/TextCardDefaultStyle"
            android:text="Nike Official"
            android:fontFamily="@font/poppinssemibold"
            app:layout_constraintTop_toTopOf="@+id/card_image_product"
            app:layout_constraintStart_toEndOf="@+id/card_image_product"/>

        <TextView
            android:id="@+id/txt_price"
            style="@style/TextCardDefaultStyle"
            android:textColor="@color/colorAccent"
            android:text="USD 180.00"
            android:fontFamily="@font/poppinsregular"
            app:layout_constraintStart_toEndOf="@+id/card_image_product"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_product"/>

    <TextView
        android:id="@+id/txt_total_price"
        style="@style/TextCardDefaultStyle"
        android:textColor="@color/colorAccent"
        android:text="USD 180.00"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintStart_toEndOf="@+id/txt_price"
        app:layout_constraintTop_toTopOf="@+id/txt_price"
        />




</androidx.constraintlayout.widget.ConstraintLayout>