<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.contactUs.ContactUsActivity"
    android:background="@color/white">

    <include
        layout="@layout/layout_toolbar_white" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_social_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_lab_setting">

        <ImageView
            android:id="@+id/btn_facebook"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"

            android:src="@drawable/ic_social_facebook"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/btn_twitter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/low_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:src="@drawable/ic_social_twitter"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/btn_facebook"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/btn_instagram"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/low_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:src="@drawable/ic_social_instagram"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/btn_twitter"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/btn_whatsapp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/low_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:src="@drawable/ic_social_whatsapp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/btn_instagram"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/btn_youtube"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/low_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:src="@drawable/ic_social_youtube"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/btn_whatsapp"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_bg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            android:src="@color/approved"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/btn_call"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:src="@drawable/ic_call"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/circle_bg"
            app:layout_constraintEnd_toEndOf="@+id/circle_bg"
            app:layout_constraintStart_toStartOf="@+id/circle_bg"
            app:layout_constraintTop_toTopOf="@+id/circle_bg"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txt_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/low_margin"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/circle_bg"
            app:layout_constraintEnd_toStartOf="@+id/circle_bg"
            app:layout_constraintTop_toTopOf="@+id/circle_bg"
            tools:text="01000014275"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_lab_setting"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/contat_us"
        style="@style/TextHeaderSetting"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/root_social_media"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginBottom="@dimen/medium_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ShadowLayoutInput">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_title"
                    style="@style/TextInputLayoutStyle"
                    >

                    <EditText
                        style="@style/EditTextStyle"
                        android:hint="@string/name"
                        android:inputType="text"
                        tools:text="Hazem"

                        />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ShadowLayoutInput"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_email"
                    style="@style/TextInputLayoutStyle"
                    >

                    <EditText
                        style="@style/EditTextStyle"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        tools:text="Hazem@yahoo.com"

                        />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ShadowLayoutInput">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_message"
                    style="@style/TextInputLayoutStyle"
                    >

                    <EditText
                        style="@style/EditTextStyle"
                        android:hint="@string/message"
                        android:inputType="textMultiLine"
                        tools:text="Message"
                        android:lines="6"
                        android:gravity="start"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>


            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ButtonNormalStyle"
                android:text="@string/send"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/app_margin"
                />



        </LinearLayout>



    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>