<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.setting.editProfile.EditProfileActivity">


    <include layout="@layout/layout_toolbar_white" />

    <TextView
        android:id="@+id/txt_lab_setting"
        style="@style/TextHeaderSetting"
        android:text="@string/edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginBottom="@dimen/medium_margin"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintTop_toBottomOf="@+id/txt_lab_setting">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_email"
                style="@style/TextInputLayoutStyle"
                android:translationY="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    style="@style/EditTextStyle"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Hazem@yahoo.com"

                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_firstName"
                style="@style/TextInputLayoutStyle"
                android:translationY="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_email">

                <EditText
                    style="@style/EditTextStyle"
                    android:hint="@string/firstName"
                    android:inputType="text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Hazem" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_lastName"
                style="@style/TextInputLayoutStyle"
                android:translationY="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_firstName">

                <EditText
                    style="@style/EditTextStyle"
                    android:hint="@string/lastName"
                    android:inputType="text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Elnahas" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_birthDate"
                style="@style/TextInputLayoutStyle"
                android:translationY="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_lastName">

                <EditText
                    style="@style/EditTextStyle"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:enabled="false"
                    android:hint="@string/date_of_birth_optional"
                    android:inputType="date"
                    android:text="@string/select_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/txt_hint_radio_gender"
                style="@style/HintTextStyle"
                android:text="@string/gender_optional"
                app:layout_constraintStart_toStartOf="@+id/input_birthDate"
                app:layout_constraintTop_toBottomOf="@+id/input_birthDate" />

            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginTop="@dimen/low_margin"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_hint_radio_gender">

                <RadioButton
                    android:id="@+id/radioMail"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="4dp"
                    android:text="@string/mail" />

                <RadioButton
                    android:id="@+id/radioFemail"
                    style="@style/MyRadioButtonStyle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="4dp"
                    android:text="@string/femail"

                    />
            </RadioGroup>

            <View
                android:id="@+id/view_center"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/app_margin"
                android:background="@color/colorIcons"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupGender" />

            <TextView
                android:id="@+id/txt_lab_receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/app_margin"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/receive_updates_of_offers_npromotions_and_discount"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/view_center" />

            <TextView
                android:id="@+id/txt_lab_sms_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/sms_notification"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_lab_receive" />

            <Switch
                android:id="@+id/switch_sms_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/app_margin"
                android:thumb="@drawable/selector_switch_thumb"
                android:track="@drawable/selector_switch_track"
                app:layout_constraintBottom_toBottomOf="@+id/txt_lab_sms_notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_lab_sms_notification" />


            <TextView
                android:id="@+id/txt_lab_newsletter_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/newsletter_subscription"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_lab_sms_notification" />

            <Switch
                android:id="@+id/switch_newsletter_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/app_margin"
                android:thumb="@drawable/selector_switch_thumb"
                android:track="@drawable/selector_switch_track"
                app:layout_constraintBottom_toBottomOf="@+id/txt_lab_newsletter_subscription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_lab_newsletter_subscription" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    <Button
        android:id="@+id/btn_save"
        style="@style/ButtonNormalStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_margin"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>