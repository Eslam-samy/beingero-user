<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.cart.checkOut.CheckOutActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_toolbar_white"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/card_total"
            android:layout_below="@+id/bar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/TextHeaderSetting"
                    android:text="@string/check_out"
                    android:layout_marginStart="@dimen/app_margin" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@+id/txt_lab_setting"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/card_total"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_address"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:textSize="@dimen/large_text_size"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_marginStart="@dimen/app_margin"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/item_cart_delivery_location"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginStart="@dimen/app_margin"
                    android:layout_marginEnd="@dimen/app_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/apply_coupon_code"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/blueLight"
                        android:layout_marginTop="@dimen/medium_margin" />

                    <TextView
                        android:id="@+id/btn_control_coupon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/add"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/blueLight"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:gravity="end"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edt_coupon_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/EditTextStyle"
                        android:background="@drawable/shadow_layout_input"
                        android:layout_marginStart="8dp"
                        android:hint="@string/coupon_code"
                        android:paddingStart="@dimen/large_padding"
                        android:paddingTop="12dp"/>


                    <Button
                        android:id="@+id/btn_add_coupon"
                        style="@style/ButtonNormalStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginEnd="@dimen/app_margin"
                        android:text="@string/add"/>


                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_information"
                    android:textSize="@dimen/large_text_size"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginStart="@dimen/app_margin"/>
                <TextView
                    android:id="@+id/txt_date_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cash_on_delivery"
                    android:layout_marginStart="@dimen/app_margin"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginStart="@dimen/app_margin"
                    android:layout_marginEnd="@dimen/app_margin">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/subtotal"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/medium_margin" />

                    <TextView
                        android:id="@+id/txt_subtotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="USD 300.00"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:textAlignment="textEnd"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginStart="@dimen/app_margin"
                    android:layout_marginEnd="@dimen/app_margin">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/delivery_fees"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/medium_margin"/>

                    <TextView
                        android:id="@+id/txt_delivery_fees_old"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="USD 300.00"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:visibility="invisible"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/txt_delivery_fees_new"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="USD 300.00"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:textAlignment="textEnd"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginStart="@dimen/app_margin"
                    android:layout_marginEnd="@dimen/app_margin">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/total"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/medium_margin"/>

                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="USD 300.00"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="@dimen/cardElevationMedium"
            android:layout_alignParentBottom="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/large_padding"
                android:paddingTop="@dimen/large_padding">

                <TextView
                    android:id="@+id/txt_lab_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="@dimen/medium_text_size"
                    android:textColor="@color/colorGray"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/app_margin"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:fontFamily="@font/poppinsmedium"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="USD 280.00"
                    android:textSize="@dimen/large_text_size"
                    app:layout_constraintTop_toBottomOf="@+id/txt_lab_total"
                    app:layout_constraintStart_toStartOf="@+id/txt_lab_total"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"/>


                <Button
                    android:id="@+id/btn_confirm"
                    style="@style/ButtonNormalStyle"
                    android:layout_height="wrap_content"
                    android:layout_width="146dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txt_lab_total"
                    app:layout_constraintBottom_toBottomOf="@+id/total_price"
                    android:text="@string/confirm"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.cardview.widget.CardView>

    </RelativeLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>