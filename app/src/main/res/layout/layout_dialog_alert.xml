<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/round_bg_checkout_items"
    android:padding="@dimen/large_text_size">


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Excuse me !!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/poppinssemibold"/>

    <TextView
        android:id="@+id/txt_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The store is closed now, you want to continue ?"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/large_text_size"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"/>


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_button_empty"
        android:text="@string/ok"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/txt_dec"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/normal_padding"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_button_empty"
        android:text="@string/_continue"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/txt_dec"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/normal_padding"/>




</androidx.constraintlayout.widget.ConstraintLayout>