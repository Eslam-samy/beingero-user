<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_marker_view"
    android:layout_width="52dp"
    android:layout_height="wrap_content"
    tools:background="@color/colorGray">

<!--    android:background="@drawable/blur_circle"-->
<!--    android:background="@drawable/marker_image_new"-->


    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="59dp"
        android:background="@drawable/ic_marker_image"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:alpha="0.8"
            android:background="@drawable/blur_circle"
            android:gravity="center"
            android:text="janet John"
            android:textColor="#000"
            android:textSize="7sp"
            android:visibility="gone" />
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="4dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_placeholder_profile"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/border_marker" />
</RelativeLayout>
