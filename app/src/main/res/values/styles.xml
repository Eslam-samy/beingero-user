<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

<!--        <item name="android:windowBackground">@color/backgroundSplash</item>-->

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="FullWindow" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@null</item>
        <item name="colorPrimaryDark">@color/backgroundSplash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/backgroundSplash</item>
    </style>

    <!-- No Action Bar -->
    <style name="AppBarLayoutTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <!-- No Action Bar -->
    <style name="AppBarLayoutThemeWhite" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- For TabView -->

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- EditText -->
    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:background">@drawable/shadow_input</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>

    <!--   TextInputLayout      -->
    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_marginStart">14dp</item>-->
<!--        <item name="android:layout_marginEnd">14dp</item>-->
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>

        <!-- <item firstName="android:translationY">-10dp</item> -->

    </style>


    <!--   Button      -->
    <style name="ButtonNormalStyle">

        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_main_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>

    </style>

    <style name="MapButtonStyle" parent="ButtonNormalStyle">
        <item name="android:layout_height">100dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/oval_white</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Setting Styles -->
    <style name="TextHeaderSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="TextSubHeaderSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:paddingStart">@dimen/app_low_padding</item>
        <item name="android:paddingEnd">@dimen/app_low_padding</item>
    </style>

    <style name="TextSubSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorCharcoal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/medium_margin</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_ltr</item>
<!--        <item name="android:drawableEnd">@drawable/ic_arrow_back</item>-->
        <item name="android:paddingStart">@dimen/app_low_padding</item>
        <item name="android:paddingEnd">@dimen/app_low_padding</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:stateListAnimator">@null</item>

    </style>

    <!-- ************************************************************ -->

    <!-- Material Ripple -->
    <!-- app:mrl_rippleRoundedCorners="80dp" -->
    <style name="RippleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/colorAccent</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>


    <!-- MyRadioButtonStyle -->
    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/selector_radiobutton</item>
    </style>

    <!-- HintTextStyle -->
    <style name="HintTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
    </style>

    <!--  TextView Normal Card View  EX: ( one Image And Two TextView) -->
    <style name="TextCardDefaultStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
    </style>


    <!-- Cancellaction Reasons -->
    <style name="TextSubCancellationReasons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/medium_margin</item>
        <item name="android:paddingStart">@dimen/app_low_margin</item>
        <item name="android:stateListAnimator">@null</item>

    </style>

    <!-- DialogAnimation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_dialog</item>
    </style>

    <style name="mytheme" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- For Stick Dell -->
    <style name="LayoutTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <!-- End -->

    <!-- For BottomSheet -->

<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
<!--        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>-->
<!--    </style>-->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_up_bottom_sheet</item>
    </style>

    <!-- Style for text card store -->
    <style name="textCardStore">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/low_xx_text_size</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textColor">@color/colorDavyGray</item>
    </style>

    <style name="TextStyleBNV">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="NavigationDrawerStyle">

        <item name="android:textSize">14sp</item><!-- text size in menu-->

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="listPreferredItemHeightSmall">40dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">14dp</item>
        <item name="listPreferredItemPaddingLeft">14dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">14dp</item>
        <item name="listPreferredItemPaddingRight">14dp</item>
    </style>


    <style name="ButtonLanguage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorCharcoal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/medium_margin</item>
        <!--        <item name="android:drawableRight">@drawable/ic_check_primary</item>-->
        <item name="android:paddingLeft">@dimen/medium_margin</item>
        <item name="android:paddingRight">@dimen/medium_margin</item>
        <item name="android:stateListAnimator">@null</item>

    </style>

